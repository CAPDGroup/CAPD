#if ! defined(Q_ACOS_ICC)
#define Q_ACOS_ICC

#include <interval/stdfun/point/q_atn1.icc>
#include <cmath>

namespace filib
{
	template <rounding_strategy K, interval_mode E >
	double q_acos(double const & x)
	{
		double res;
	
		/*
		 check argument
		 **/
		if (fp_traits<double,K>::IsNaN(x))
		{
			if ( E )
				return fp_traits<double,K>::quiet_NaN();
			else
			{
				std::cerr << "filib::q_acos: called with NaN value." << std::endl;
				std::terminate();
			}
		}
		else
		{
			if ((x<-1.0)||(1.0<x))                            
			{
				if ( E )
					return fp_traits<double,K>::quiet_NaN();
				else
				{
					std::cerr << "filib::q_acos: called with NaN value." << std::endl;
					std::terminate();
				}
			}
			else
			{
				/**
				 main program with different cases
				 */
				if (
					(-1e-17<x)
					&&
					(x<1e-17)
				) 
					res=filib_consts<double>::q_piha;
				else if (x < 0.0) 
				{
					double t = std::sqrt((1+x)*(1-x))/x;
					res = filib_consts<double>::q_pi+q_atn1(t);
				}
				else
				{
					double t = std::sqrt((1+x)*(1-x))/x;
					res = q_atn1(t); 
				}
			}
		}
	
		return(res);
	}
}
#endif
